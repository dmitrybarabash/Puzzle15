                <TextBlock Grid.Row="0" Grid.Column="2" Name="textBlockMoves1" Text="0 ходов" FontWeight="Bold" Margin="20,5,20,5" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
